{
  "name": "hangman",
  "private": true,
  "version": "0.0.1",
  "homepage": "https://gawronskijakub.github.io/hangman",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "pretty-quick --pattern \"src/**/*.(ts|tsx)\" --staged",
    "preview": "vite preview",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.63.3"
  },
  "devDependencies": {
    "@eslint/create-config": "^0.4.4",
    "@types/node": "^20.2.5",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  },
  "lint-staged": {
    "*.ts, *.tsx, *.scss": "yarn format",
    "*.ts, *.tsx": "yarn lint"
  }
}
